    "@types/nodemailer": "^6.4.17",
    "@types/web-push": "^3.6.3",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "@vitest/coverage-v8": "^3.0.6",
    "@vitest/ui": "^3.0.6",
    "@arethetypeswrong/cli": "^0.18.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",

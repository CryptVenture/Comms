  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "directories": {
    "doc": "docs",
    "example": "examples"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "pnpm run clean && tsup && pnpm run build:check",
    "build:check": "publint && attw --pack . --ignore-rules=no-resolution",
    "clean": "rm -rf dist/ coverage/ .turbo",
    "dev": "tsx examples/with-notification-catcher.ts",
    "demo": "notification-catcher & tsx examples/with-notification-catcher.ts && printf '\\n>>> Please visit http://localhost:1080 <<<\\n\\n'",
    "lint": "eslint . && prettier --check .",
    "lint:fix": "eslint . --fix && prettier --write .",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "pnpm run build && pnpm run test",
    "run-catcher": "notification-catcher",
    "size": "echo 'WebVentures Comms build size:' && du -hs dist/",
    "format": "prettier --write \"src/**/*.ts\" \"__tests__/**/*.ts\""
  },
